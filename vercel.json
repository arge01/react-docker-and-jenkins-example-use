{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "app/dist/$1"
    }
  ],
  "buildCommand": "yarn build",
  "outputDirectory": "app/dist",
  "installCommand": "yarn install",
  "functions": {
    "app/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  }
}